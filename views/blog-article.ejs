<section class="blog-article">

   <% if(!articleTitle) {%>
        <p>Somethings gone wrong...</p>
    <%}%>
    
    <% for(var i =0; i < articleTitle.length; i++) { %>
        
        <%if (url.includes(articleTitle[i].split(' ').join('-'))) { %>
            
        <h3>
            <%= articleTitle[i] %>
        </h3>    
        <div>
            <span>
                Author: <%= articleAuthor[i] %>
            </span>
            <span>
                <%= articleTime[i] %>
            </span>
        </div>    
        <p>
            <%= articleBody[i] %>
        </p>

    <% } %>

<% } %>

</section>
