<section class="dashboard-page">
    <div class="content-block-1">

        <h3>Dashboard</h3>
        <p>Welcome Jack</p>
        <a href="/users/logout">Logout</a>
        <p>This is your Dashboard where you can view all of the blogs you have uploaded as well as write new ones </p>
    </div>

    <div class="create-blog">
        <form action="/api/articles" method="POST" enctype="multipart/form-data">
            <label for="title">Article Title</label>
            <input type="text" placeholder="Title" id="title" name="title">
            <label for="author">Article Author</label>
            <input type="text" placeholder="Author" id="author" name="author">
            <label for="file">Choose File</label>
            <input type="file" name="file" id="file" class="custom-file-input">
            
            <textarea id="body" cols="60" rows="30" name="body">

            </textarea>
            <button type="submit">
                Post Article
            </button>

        </form>
    </div>

    <div class="article-list">

        <%if(!articles) { %> 

            <p>No articles to display</p>

        <% } else { %> 
        
      

        
       <% for(var i =0; i < articles.length; i++) { %>

        <div class="article-box">

            <div style="display: none;">
                <%= articles[i]._id %>
            </div>
            <div>
                <img src="/images/hero-img.jpg" alt="">
            </div>
            <span> 
                <%= articles[i].title %>
            </span>
            <span>
                <%= articles[i].author %>
            </span>
            <p>
                <%= articles[i].body %>
            </p>
            <form action="/api/articles/ <%= articles[i]._id %>?_method=DELETE" method="POST">
                <input type="submit" name="delete" id="remove" value="Delete" />
            </form>
        </div>
        <% } %>

        <% } %>
    </div>
</section>