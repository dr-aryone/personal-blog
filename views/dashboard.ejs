<section class="dashboard-page">
    <div class="content-block-1">

        <h3>Dashboard</h3>
        <p>Welcome Jack</p>
        <a href="/users/logout">Logout</a>
        <p>This is your Dashboard where you can view all of the blogs you have uploaded as well as write new ones </p>
    </div>

    <div class="create-blog">
        <form action="/api/articles" method="POST">
            <label for="title">Article Title</label>
            <input type="text" placeholder="Title" id="title" name="title">
            <label for="author">Article Author</label>
            <input type="text" placeholder="Author" id="author" name="author">
            
            <textarea id="body" cols="60" rows="30" name="body"></textarea>
            <button type="submit">
                Post Article
            </button>

        </form>
    </div>



    <div class="article-list">

        <%if(!articles) { %> 

            <p>No articles to display</p>

        <% } else { %> 
        
      

        
       <% for(var i =0; i < articles.length; i++) { %>

        <div class="article-box">

            <div style="display: none;">
                <%= articles[i]._id %>
            </div>
            <div class="img-container">
                <img src="/images/hero-img.jpg" alt="">
            </div>
            <span> 
                <%= articles[i].title %>
            </span>
            <span>
                <%= articles[i].author %>
            </span>
            <p class="article-body">
                <%= articles[i].body %>
            </p>
            <button class="delete-button">
                Delete
            </button>
            <div class="confirm-delete-modal">
                <p>Are you sure you want to delete this item?</p>
                <form action="/api/articles/ <%= articles[i]._id %>?_method=DELETE" method="POST">
                    <input type="submit" name="delete" id="confirm-delete" value="Yes I am sure" />
                </form>
                <button class="cancel-delete">
                    Cancel
                </button>
            </div>
        </div>
        <% } %>

        <% } %>
    </div>
</section>